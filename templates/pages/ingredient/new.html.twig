{% extends "base.html.twig" %}

{% block body %}
   <div class="container">
   <h1 class="mt-4">Creation d'un ingredient</h1>

   <form name="ingredient" method="post">

    <div class="form-group">
        {{form_label(form.name)}}
        {{form_widget(form.name)}}
        {{form_errors(form.name)}}
        <div class="form-error">
        {{form_errors(form.name)}}
        </div>
    </div>
    
    <div class="form-group">
        {{form_label(form.price)}}
        {{form_widget(form.price)}}
        {{form_errors(form.price)}}
        <div class="form-error">
        {{form_errors(form.price)}}
        </div>
    </div> 

        {{form_row(form._token)}}

        <button type="submit" id="ingredient_submit" name="ingredient[submit]" class="btn btn-primary mt-4">
            Ajouter
         </button>
  
</div>
</form>
   </div>
{% endblock %}